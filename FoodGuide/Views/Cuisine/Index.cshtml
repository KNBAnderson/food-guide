
@using FoodGuide.Models;

<!DOCTYPE html>
<html>
  <head>
    <meta charset='utf-8'>
    <title>List of Cuisines</title>
    <link rel='stylesheet' href='https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css'>
    <link rel="stylesheet" href="~/css/styles.css">
  </head>
  <body class="container">
    <h1>Pick a cuisine to see more restaurants</h1>

    <ul>
    @if (Model.Count == 0)
    {
      <p>There are cuisines in your list yet :(!</p>
    }
    @if(Model.Count != 0)
    {
      @foreach (Cuisine cuisine in Model)
      {

        <li><a href='/cuisine/@cuisine.Id/restaurant'>@cuisine.Name</a></li>
      }
    }
    </ul>

    </html>
  </body>
