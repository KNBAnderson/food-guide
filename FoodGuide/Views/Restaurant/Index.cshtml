@using FoodGuide.Models;

<!DOCTYPE html>
<html>
  <head>
    <meta charset='utf-8'>
    <title>View your restaurants</title>
    <link rel='stylesheet' href='https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css'>
    <link rel="stylesheet" href="~/css/styles.css">
  </head>
  <body class="container">
    <h1>Pick a restaurant!</h1>

    <ul>
    @if (Model.Count == 0)
    {
      <p>There are no restaurants :(!</p>
    }
    @if(Model.Count != 0)
    {
      @foreach (Restaurant restaurant in Model)
      {
        <li><a href='/cuisine/{id}/@restaurant.Id'>@restaurant.Name</a></li>
      }
    }
    </ul>

    <a href="/restaurant/new">Add a new restaurant to your list</a>

    </html>
  </body>
